<section class="{{ section.settings.class }}">
  <div class="hero-container">
    {% if section.settings.hero_image %}
      <img src="{{ section.settings.hero_image | file_url }}" alt="{{ section.settings.hero_heading }}">
    {% endif %}
    {% if section.settings.hero_heading %}
      <h1>{{ section.settings.hero_heading }}</h1>
    {% endif %}
    {% if section.settings.hero_subheading %}
      <p>{{ section.settings.hero_subheading }}</p>
    {% endif %}
    {% if section.settings.hero_button_text and section.settings.hero_button_link %}
      <a href="{{ section.settings.hero_button_link }}" class="hero-button">
        {{ section.settings.hero_button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "id": "hero_image",
      "type": "image_picker",
      "label": "Hero Image"
    },
    {
      "id": "hero_heading",
      "type": "text",
      "label": "Hero Heading"
    },
    {
      "id": "hero_subheading",
      "type": "textarea",
      "label": "Hero Subheading"
    },
    {
      "id": "hero_button_text",
      "type": "text",
      "label": "Button Text"
    },
    {
      "id": "hero_button_link",
      "type": "url",
      "label": "Button Link"
    },
    {
      "id": "class",
      "type": "text",
      "label": "CSS Class",
      "default": "hero-section"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
