<div class="image-slider">
  <div class="slider">
    {% for block in section.blocks %}
      <div class="slide">
        <img src="{{ block.settings.image | img_url: '1024x1024' }}" alt="{{ block.settings.alt_text | escape }}">
      </div>
    {% endfor %}
  </div>
</div>

<style>
.image-slider .slider {
  display: flex;
  overflow: hidden;
}

.image-slider .slide {
  min-width: 100%;
  transition: transform 0.5s ease-in-out;
}

.image-slider img {
  width: 100%;
  height: auto;
  object-fit: cover;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const slider = document.querySelector(".image-slider .slider");
    const slides = document.querySelectorAll(".image-slider .slide");
    let index = 0;

    function showNextSlide() {
      index = (index + 1) % slides.length;
      slider.style.transform = `translateX(-${index * 100}%)`;
    }

    setInterval(showNextSlide, 3000); // Автопрокрутка каждые 3 секунды
  });
</script>

{% schema %}
{
  "name": "Image Slider",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Slide Image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
