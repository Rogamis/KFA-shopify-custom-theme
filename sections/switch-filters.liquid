<script>
    document.querySelectorAll('#colorFilter input').forEach(function(radio) {
        radio.addEventListener('change', function(event) {
            var selectedColor = event.target.value;
            var switchItems = document.querySelectorAll('.left-side-items .item');
            var hoverBlocks = document.querySelectorAll('.content-hover-blocks .item');
            var tableSwitches = document.querySelector('.table-switches');

            if (selectedColor === 'all') {
                tableSwitches.style.display = 'flex'; // ÐŸÐ¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÐ¼ Ñ‚Ð°Ð±Ð»Ð¸Ñ†Ñƒ
                document.querySelector('.content-hover-blocks').style.display = 'none';

                switchItems.forEach(item => item.style.display = 'flex'); // ÐŸÐ¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÐ¼ Ð²ÑÐµ ÑÐ²Ð¸Ñ‚Ñ‡Ð¸
                hoverBlocks.forEach(item => item.style.display = 'none'); // Ð¡ÐºÑ€Ñ‹Ð²Ð°ÐµÐ¼ Ð¾Ð¿Ð¸ÑÐ°Ð½Ð¸Ñ
            } else {
                tableSwitches.style.display = 'none'; // ÐŸÑ€ÑÑ‡ÐµÐ¼ Ñ‚Ð°Ð±Ð»Ð¸Ñ†Ñƒ
                document.querySelector('.content-hover-blocks').style.display = 'block';

                switchItems.forEach(item => {
                    if (item.classList.contains(selectedColor)) {
                        item.style.display = 'flex';
                    } else {
                        item.style.display = 'none';
                    }
                });

                hoverBlocks.forEach(item => {
                    if (item.classList.contains(selectedColor)) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }
        });
    });
</script>


