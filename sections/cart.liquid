<style>
.cart-container {
    display: flex;
    justify-content: space-between;
    gap: 70px
}


.cart-items {
  border-bottom: 1px solid #ddd;
}

.cart-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
  padding: 40px 0;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-items {
    width: 70%;
}

.cart-total {
    width: 30%;
}

.cart-item-remove {
  margin-right: 10px;
}

.remove-button {
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
}

.cart-item-image img {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 4px;
  margin-right: 20px;
  margin-left: 10px;
}

.cart-item-details {
  flex: 2;
}

.item-title {
  font-size: 16px;
  margin: 0;
}

.item-option {
  font-size: 14px;
  color: #555;
  margin: 5px 0;
}

.item-quantity-form {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

.quantity-input {
  width: 60px;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 5px;
  margin-right: 10px;
}

.update-button {
  padding: 5px 10px;
  font-size: 14px;
  color: #fff;
  background-color: #EDD146;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  color: black;
}

.update-button:hover {
  background-color: rgb(163, 145, 55);
}

.cart-item-price {
  font-size: 16px;
  font-weight: bold;
  text-align: right;
  margin-left: 20px;
}

.cart-total {
    display: flex;
    flex-direction: column;
}

.cart-total p {
    margin: 10px 0px;
    color: white;
    font-size: 26px;
}

.cart-total {
    height: 500px;
    background-image: url('{{ 'cart.png' | asset_url }}');
    padding: 20px;
    border-radius: 20px;
}

.checkout-button {
      margin-top: 60px;
    text-align: center;
    padding: 15px 10px;
    font-size: 21px;
    background-color: #EDD146;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    color: black;
}

.cart-total div p {
    font-size: 16px;
    border-top: 1px dashed white;
    padding-top: 10px;
    margin-top: 210px;
}

.checkout-button:hover {
  background-color: rgb(163, 145, 55);
}
</style>

<div class='container'> 
    <h1>Your Cart</h1>
<div class="cart-container">

  {% if cart.item_count > 0 %}

    <div class="cart-items">
      {% for item in cart.items %}
      <div class="cart-item">
        <div class="cart-item-remove">
          <form method="post" action="/cart/change">
            <input type="hidden" name="id" value="{{ item.key }}">
            <input type="hidden" name="quantity" value="0">
            <button type="submit" class="remove-button">Ã—</button>
          </form>
        </div>
        <div class="cart-item-image">
          <img src="{{ item.image | img_url: '100x100' }}" alt="{{ item.product.title }}">
        </div>
        <div class="cart-item-details">
          <h3 class="item-title">{{ item.product.title }}</h3>
          {% for option in item.options_with_values %}
            <p class="item-option">{{ option.name }}: {{ option.value }}</p>
          {% endfor %}
          <form method="post" action="/cart/change" class="item-quantity-form">
            <input type="hidden" name="id" value="{{ item.key }}">
            <input type="number" name="quantity" class="quantity-input" value="{{ item.quantity }}" min="1">
            <button type="submit" class="update-button">Update</button>
          </form>
        </div>
        <div class="cart-item-price">
          {{ item.line_price | money }}
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="cart-total">
      <p> Total: {{ cart.total_price | money }} </p>
          <p>Discount: -{{ cart.total_discount | money }}</p>
      <a href="/checkout" class="checkout-button">Proceed to Checkout</a>
      <div>
        <p>Please note that orders from different suppliers may take longer due to differences in order processing times by the customer.</p>
      </div>
    </div>

    
  {% else %}
    <p>Your cart is empty.</p>
    <a href="/collections/all" class="continue-shopping">Continue Shopping</a>
  {% endif %}


  
</div>
</div>
