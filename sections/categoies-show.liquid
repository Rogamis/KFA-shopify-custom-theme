<div class="four-background-images-section">
  <div class="image-row">
    <div class="image-item" style="background-image: url('{{ section.settings.image1 | img_url: '2048x2048' }}');">
      <div class="text-content">
        <h3>{{ section.settings.text1_heading }}</h3>
        <p>{{ section.settings.text1_body }}</p>
      </div>
    </div>
    <div class="image-item" style="background-image: url('{{ section.settings.image2 | img_url: '2048x2048' }}');">
      <div class="text-content">
        <h3>{{ section.settings.text2_heading }}</h3>
        <p>{{ section.settings.text2_body }}</p>
      </div>
    </div>
    <div class="image-item" style="background-image: url('{{ section.settings.image3 | img_url: '2048x2048' }}');">
      <div class="text-content">
        <h3>{{ section.settings.text3_heading }}</h3>
        <p>{{ section.settings.text3_body }}</p>
      </div>
    </div>
    <div class="image-item" style="background-image: url('{{ section.settings.image4 | img_url: '2048x2048' }}');">
      <div class="text-content">
        <h3>{{ section.settings.text4_heading }}</h3>
        <p>{{ section.settings.text4_body }}</p>
      </div>
    </div>
  </div>
</div>

<style>
.four-background-images-section {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.image-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.image-item {
  flex: 1 1 calc(25% - 20px);
  height: 300px;
  background-size: cover;
  background-position: center;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.text-content {
  background-color: rgba(0, 0, 0, 0.5); /* Полупрозрачный фон для текста */
  padding: 10px;
  border-radius: 5px;
}

.text-content h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.text-content p {
  font-size: 1rem;
  margin: 0;
}
</style>

