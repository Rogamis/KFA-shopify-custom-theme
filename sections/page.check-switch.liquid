<section>
    <div class="container">
        <div class="hero">
        <h1 class="hero-title">{{ section.settings.title }}</h1>
        <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
        </div>
    </div>

    <style>
        .hero {
            background-image: url("{{ section.settings.background | img_url: 'master' }}");
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            color: white;
            text-align: center;
        }

        .hero-title {
            font-size: 96px;
            
        }

        .hero-subtitle {
            font-size: 1.5rem;
        }
    </style>
</section>

{% schema %}
{
  "name": "Standart Hero",
  "settings": [],
  "presets": [
    {
      "category": "Hero",
      "name": "Standart Hero",
      "settings": {
        "background": {
          "label": "Background",
          "type": "image_picker",
          "default": "https://cdn.shopify.com/s/files/1/0533/2089/5880/files/hero-bg.jpg?v=1634130000"
        },
        "title": {
          "label": "Title",
          "type": "text",
          "default": "Welcome to our store"
        },
        "subtitle": {
          "label": "Subtitle",
          "type": "text",
          "default": "The best place to buy your favorite products"
        }
      }
    }
  ]
}
{% endschema %}

